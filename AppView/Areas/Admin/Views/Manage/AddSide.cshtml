@model AppData.Models.SideDishes

@{
    ViewData["Title"] = "AddSide";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}
<div style="margin-top:50px;">
    <h1>AddSide</h1>

    <h4>SideDishes</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form action="~/Admin/Manage/AddSide" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none;">
                    <label for="IDSideDishes">IDSideDishes</label>
                    @Html.TextBoxFor(m => m.IDSideDishes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.IDSideDishes, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="NameSideDishes">NameSideDishes</label>
                    @Html.TextBoxFor(m => m.NameSideDishes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.NameSideDishes, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="Image">Image</label>
                    @Html.TextBoxFor(model => model.Image, null, new { type = "file", @class = "form-control" } )
                    <br />
                    @*<img src="~/images/@Model.Image" asp-append-version="true" width="200px" height="200px">
                    @Html.Hidden("oldimage", @Model.Image)*@
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Price, "", new { @class = "text-danger" })
       
                </div>
                <div class="form-group">
                    <label for="Mass">Mass</label>
                    @Html.TextBoxFor(m => m.Mass, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Mass, "", new { @class = "text-danger" })
                  
                </div>
                <div class="form-group">
                    <label for="DescriptionSideDishes">DescriptionSideDishes</label>
                    @Html.TextBoxFor(m => m.DescriptionSideDishes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.DescriptionSideDishes, "", new { @class = "text-danger" })
 
                </div>
          @*      <div class="form-group">
                    <label for="IDDrink">IDDrink</label>
                    @Html.TextBoxFor(m => m.IDDrink, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.IDDrink, "", new { @class = "text-danger" })
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>

