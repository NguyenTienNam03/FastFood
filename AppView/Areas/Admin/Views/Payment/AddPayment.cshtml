@model AppData.Models.Payments

@{
    ViewData["Title"] = "AddPayment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<div style="margin-top:100px;">
    <h1>AddPayment</h1>

    <h4>Payments</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form action="~/Admin/Voucher/AddPayment" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none;">
                    <label for="IDDrink">IDPayment</label>
                    @Html.TextBoxFor(m => m.IDPayment, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.IDPayment, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="Payment">Payment</label>
                    @Html.TextBoxFor(m => m.Payment, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Payment, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="display:none;">
                    <label for="Description">Description</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="Bankaccount">Bankaccount</label>
                    @Html.TextBoxFor(m => m.Bankaccount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Bankaccount, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="BankAccountNumber">BankAccountNumber</label>
                    @Html.TextBoxFor(m => m.BankAccountNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.BankAccountNumber, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="BankName">BankName</label>
                    @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.BankName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="ImageQR">ImageQR</label>
                    @Html.TextBoxFor(m => m.ImageQR, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.ImageQR, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" style="display:none;">
                    <label for="Status">Status</label>
                    @Html.TextBoxFor(m => m.ImageQR, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.Status, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>

